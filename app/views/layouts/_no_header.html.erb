<div class="upper_right_no_header">
  <% if user_signed_in? %>
  <%= link_to "#{current_user.email}", destroy_user_session_path, method: :delete, class: "color_blue" %>
  <% else %>
    <%= link_to "ログイン", new_user_session_path, class:'white_button', id:'new_user_session' %>
    <%= link_to "アカウント登録", new_user_registration_path, class:'white_button', id:'new_user_registration' %>
    <%= link_to 'ゲストログイン', top_guest_sign_in_path, method: :post, class:'white_button' %>
  <% end %>
</div>
<div class="logo_bottom">
  <%= link_to "ログイン", new_user_session_path, class:'white_button', id:'new_user_session' %>
  <%= link_to "アカウント登録", new_user_registration_path, class:'white_button', id:'new_user_registration' %>
