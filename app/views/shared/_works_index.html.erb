<div class="centered">
  <table>
    <thead>
      <tr>
        <th>id</th>
        <th>業務名</th>
        <th>所要時間（分）</th>
        <th>カテゴリ</th>
        <th>編集</th>
        <th>削除</th>
      </tr>
    </thead>
    <tbody>
      <% works.each do |work| %>
        <tr>
          <td><%= work.id %></td>
          <td><%= work.name %></td>
          <td><%= work.time_required %></td>
          <td><%= work.taxon.name %></td>
          <td>
            <%= link_to "編集", [:edit, work], class: "color_blue", id: "edit_work_#{work.id}", data: {"turbolinks" => false} %>
          </td>
          <td>
            <%= link_to "削除", work, method: :delete, data: { confirm: "本当に削除しますか？", "turbolinks" => false }, class: "color_blue", id: "delete_work_#{work.id}" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
