= form_with url: table_path( @table), method: :patch, local: true do |f|
  .page_header_margin_bottom_20px
    h1.page_title
      | 作業割当
  .vertically_aligned_and_centered
    h2
      | 編集
    h3.margin_top_0
      = f.label :name ,"タイトル"
      | ：
      = f.text_field :title, value: @table.title
      | 　
      = f.hidden_field :cells_length, value: @table.size * 5
      = f.hidden_field :table_size, value: @table.size
      = f.submit "保存", id: "submit_save"
  = render 'tables/edit_form', f: f, table: @table
