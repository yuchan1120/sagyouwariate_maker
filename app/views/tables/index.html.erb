<div class="page_header_margin_bottom_50px">
  <h1 class="page_title">作業割当</h1>
</div>
<%
=begin%>
 <%= render 'shared/search_results' %>
<%
=end%>
<%
=begin%>
 <div class="search_form">
  <%= form_with url: search_table_path, method: :get, local: true do |f| %>
    <%= f.text_field :keyword, placeholder: "キーワードを入力" %>
    <%= f.submit :検索 %>
  <% end %>
  <%= link_to "新規登録", :new_table, class: "new_button" %>
</div>
<%
=end%>
<div class="centered">
  <table>
    <thead>
      <tr>
        <th>id</th>
        <th>タイトル</th>
        <th>更新日</th>
        <th>作成日</th>
        <th>参照</th>
        <th>編集</th>
        <th>削除</th>
      </tr>
    </thead>
    <tbody>
      <% @tables.each do |table| %>
        <tr>
          <td><%= table.id %></td>
          <td><%= table.title %></td>
          <td><%= table.updated_at.to_s(:datetime_jp) %></td>
          <td><%= table.created_at.to_s(:datetime_jp) %></td>
          <td>
            <%= link_to "参照", table, class: "immutable_color_link" %>
          </td>
          <td>
            <%= link_to "編集", [:edit, table], class: "immutable_color_link" %>
          </td>
          <td>
            <%= link_to "削除", table, method: :delete, data: { confirm: "本当に削除しますか？" }, class: "immutable_color_link" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
