<div class="page_header_margin_bottom_50px">
  <h1 class="page_title">業務一覧</h1>
</div>
<div class="wrap">
  <div class="side">
    <%= render 'shared/side_bar', taxons: @all_taxons %>
  </div>
  <div>
    <%= render 'shared/search_results' %>
    <div class="search_form">
      <%= form_with url: search_work_path, method: :get, local: true do |f| %>
        <%= f.text_field :keyword, placeholder: "キーワードを入力" %>
        <%= f.submit :検索 %>
      <% end %>
    </div>
    <%= render 'shared/works_index', works: @works %>
  </div>
</div>
